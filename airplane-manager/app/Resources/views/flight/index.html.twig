{% extends 'base.html.twig' %}

{% block body %}
    <h1>Flights list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Departairport</th>
                <th>Arrivalairport</th>
                <th>Flighttime</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for flight in flights %}
            <tr>
                <td><a href="{{ path('flight_show', { 'id': flight.id }) }}">{{ flight.id }}</a></td>
                <td>{{ flight.departAirport }}</td>
                <td>{{ flight.arrivalAirport }}</td>
                <td>{{ flight.flightTime }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('flight_show', { 'id': flight.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('flight_edit', { 'id': flight.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('flight_new') }}">Create a new flight</a>
        </li>
    </ul>
{% endblock %}
