{% extends 'base.html.twig' %}

{% block body %}
    <h1>Flight info</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ flight.id }}</td>
            </tr>
            <tr>
                <th>Airplane</th>
                <td>{{ flight.airplane }}</td>
            </tr>
            <tr>
                <th>Departure airport</th>
                <td>{{ flight.departAirport }}</td>
            </tr>
            <tr>
                <th>Arrival airport</th>
                <td>{{ flight.arrivalAirport }}</td>
            </tr>
            <tr>
                <th>Flight time</th>
                <td>{{ flight.flightTime }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('flight_index') }}" class="btn btn-info">Back to the list</a>
    <br>
    <a href="{{ path('flight_edit', { 'id': flight.id }) }}" class="btn btn-success">Edit</a>

    {{ form_start(delete_form) }}
    <input type="submit" class="btn btn-danger" value="Delete">
    {{ form_end(delete_form) }}

{% endblock %}
