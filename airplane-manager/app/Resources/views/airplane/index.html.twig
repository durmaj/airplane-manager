{% extends 'base.html.twig' %}

{% block body %}
    <h1>Airplanes list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Production year</th>
                <th>Manufacturer</th>
                <th>Model</th>
                <th>Max passengers</th>
                <th>Max load</th>
                {% if app.user %}
                <th>Actions</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for airplane in airplanes %}
            <tr>
                <td><a href="{{ path('airplane_show', { 'id': airplane.id }) }}">{{ airplane.id }}</a></td>
                <td>{{ airplane.name }}</td>
                <td>{{ airplane.prodYear }}</td>
                <td>{{ airplane.manufacturer }}</td>
                <td>{{ airplane.model }}</td>
                <td>{{ airplane.maxPassengers }}</td>
                <td>{{ airplane.maxLoad }}</td>
                {% if app.user %}
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('airplane_show', { 'id': airplane.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('airplane_edit', { 'id': airplane.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>

            <a href="{{ path('airplane_new') }}" class="btn btn-info" role="button">Create a new airplane</a>

{% endblock %}
